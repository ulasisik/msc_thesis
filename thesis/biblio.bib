   issn = {1088-9051},
   issue = {9},
   journal = {Genome Research},
   month = {9},
   pages = {1207-1218},
   pmid = {20647238},
   title = {MicroRNA, mRNA, and protein expression link development and aging in human and macaque brain},
   volume = {20},
   url = {http://genome.cshlp.org/cgi/doi/10.1101/gr.106849.110},
   year = {2010},
}
