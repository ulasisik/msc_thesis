   issue = {3},
   journal = {American Journal of Human Biology},
   keywords = {Biological network inference,Direct method,Laplacian Eigenmaps,PCA,Sparse PCA,Un-supervised learning},
   month = {5},
   pages = {295-311},
   pmid = {17286259},
   title = {Growth rates and life histories in twenty-two small-scale societies},
   volume = {18},
   url = {http://doi.wiley.com/10.1002/ajhb.20510},
   year = {2006},
}

